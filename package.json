{
  "name": "sfx-view",
  "version": "0.0.0",
  "description": "SF-X View SDK containing pre-built web components for for creating e-commerce application interfaces.",
  "private": true,
  "workspaces": [
    ".storybook/*",
    "packages/*/@sfx/base",
    "packages/*/@sfx/ui",
    "packages/*/@sfx/*"
  ],
  "scripts": {
    "bundle": "webpack",
    "start": "webpack-dev-server",
    "storybook": "start-storybook -s ./dist -p 9000",
    "docs": "typedoc --options ./typedoc.js packages",
    "test": "yarn workspaces run test",
    "test:functional:all": "testcafe ./test-tools/testcafe.ts",
    "test:functional:chrome": "testcafe chrome ./test-tools/testcafe.ts",
    "test:functional:firefox": "testcafe firefox ./test-tools/testcafe.ts",
    "coverage": "cat coverage/lcov.info | codecov",
    "dev:themes": "nodemon -e scss -x webpack",
    "lint:scripts": "eslint ./packages/web-components/@sfx/**/src/ --ext .ts --plugin only-warn",
    "lint:scripts:fix": "eslint ./packages/web-components/@sfx/**/src/ --fix --ext .ts --plugin only-warn",
    "lint:scripts:ci": "eslint ./packages/web-components/@sfx/**/src/ --ext .ts --max-warnings 0",
    "lint:stories": "eslint ./packages/web-components/@sfx/**/stories/ --no-eslintrc -c ./.storybook/.eslintrc.js --ext .ts --plugin only-warn",
    "lint:stories:fix": "eslint ./packages/web-components/@sfx/**/stories/ --no-eslintrc -c ./.storybook/.eslintrc.js --ext .ts --plugin only-warn",
    "lint:stories:ci": "eslint ./packages/web-components/@sfx/**/stories/ --no-eslintrc -c ./.storybook/.eslintrc.js --ext .ts --plugin only-warn",
    "lint:tests": "eslint ./packages/web-components/@sfx/**/test/ --ext .ts --no-eslintrc -c ./scripts/config/eslint/test/.eslintrc.js --plugin only-warn",
    "lint:tests:fix": "eslint ./packages/web-components/@sfx/**/test/ --fix --ext .ts --no-eslintrc -c ./scripts/config/eslint/test/.eslintrc.js --plugin only-warn",
    "lint:tests:ci": "eslint ./packages/web-components/@sfx/**/test/ --ext .ts --no-eslintrc -c ./scripts/config/eslint/test/.eslintrc.js --max-warnings 0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/groupby/sfx-view.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/groupby/sfx-view/issues"
  },
  "homepage": "https://github.com/groupby/sfx-view#readme",
  "devDependencies": {
    "@storybook/addon-a11y": "^5.1.9",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-cssresources": "^5.1.9",
    "@storybook/addon-events": "^5.1.11",
    "@storybook/addon-knobs": "^5.1.9",
    "@storybook/addon-links": "^5.1.11",
    "@storybook/addon-notes": "^5.1.9",
    "@storybook/addon-viewport": "^5.1.9",
    "@storybook/addons": "^5.1.9",
    "@storybook/html": "^5.1.9",
    "@storybook/preset-typescript": "^1.1.0",
    "@storybook/theming": "^5.1.9",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.2.1",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@types/shortid": "^0.0.29",
    "@types/sinon-chai": "^3.2.2",
    "@types/webpack-env": "^1.13.9",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "chai": "^4.2.0",
    "codecov": "^3.5.0",
    "css-loader": "^3.1.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-only-warn": "^1.0.1",
    "event-emitter": "^0.3.5",
    "extract-loader": "^3.1.0",
    "file-loader": "^4.1.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.5",
    "karma-mocha": "^1.3.0",
    "karma-sinon-chai": "^2.0.2",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^4.0.2",
    "mocha": "^6.1.4",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "sass-loader": "^7.1.0",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "storybook-custom-events": "groupby/storybook-custom-events#2d8cba8de3ccc59f8b414a2550161088c6577921",
    "style-loader": "^0.23.1",
    "testcafe": "1.5.0",
    "ts-loader": "^6.0.3",
    "typedoc": "^0.14.2",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^3.5.2",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.7.2"
  },
  "dependencies": {
    "lit-element": "^2.2.0"
  }
}
