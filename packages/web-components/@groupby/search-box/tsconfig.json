{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["es2015", "es2016.array.include", "dom"],
    "types": ["node", "mocha", "sinon"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true
  },
  "exclude": ["node_modules", "dist"],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": ["src"]
}
